{% extends 'connected.html.twig' %}

{% block title %}{% trans %}My statistics{% endtrans %}{% endblock %}

{% block main %}
    <div class="row">
        {% for tuile in tuiles %}
            {{ include('parts/stat_card.html.twig') }}
        {% endfor %}
    </div>
    {% for canva in canvas %}
        <fieldset class="mb-3">
            <legend>
                {{ canva.name }}
            </legend>
            <div class="chart-container">
                <canvas class="chart" data-canvas="{{ canva.json }}"></canvas>
            </div>
        </fieldset>
    {% endfor %}
{% endblock %}
