{% extends 'base.html.twig' %}

{% block title %}{% trans %}Log in{% endtrans %}{% endblock %}

{% block main %}
    {% if error %}
        <div class="alert alert-danger" role="alert">
            {{ error.messageKey|trans(error.messageData, 'security') }}
        </div>
    {% endif %}
    {% if info %}
        <div class="alert alert-info" role="alert">
            {{ info|trans({}, 'security') }}
        </div>
    {% endif %}
    {{ form_start(form) }}
        <div class="row">
            <div class="col-md-6">{{ form_row(form._username) }}</div>
            <div class="col-md-6">{{ form_row(form._password) }}</div>
        </div>
        {{ form_row(form._remember_me) }}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>
        <button type="submit" class="btn btn-primary">
            <i class="fas fa-sign-in-alt"></i> {% trans %}Log in{% endtrans %}
        </button>
        <a class="btn btn-success float-right" href="{{ path('user_registration') }}" role="button"><i class="fas fa-user-plus"></i> {% trans %}Registration{% endtrans %}</a>
    {{ form_end(form) }}
{% endblock %}