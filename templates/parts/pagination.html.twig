{% set current_path = app.request.get('_route') %}
{% if nbPages > 0 %}
    <nav class="">
        <ul class="pagination justify-content-center">
            <li class="page-item {% if page < 2 %}disabled{% endif %}">
                <a class="page-link" href="{{ path(current_path, {'page': 1}) }}" tabindex="-1"><i class="fas fa-angle-double-left"></i></a>
            </li>
            <li class="page-item {% if page < 2 %}disabled{% endif %}">
                <a class="page-link" href="{{ path(current_path, {'page': page - 1}) }}" tabindex="-1"><i class="fas fa-angle-left"></i></a>
            </li>
            {% for i in 1..nbPages %}
                <li class="page-item {% if page == i %}active{% endif %}">
                    {% if page == i %}
                        <span class="page-link">{{ i }}<span class="sr-only">({% trans %}current{% endtrans %})</span></span>
                    {% else %}
                        <a class="page-link" href="{{ path(current_path, {'page': i}) }}">{{ i }}</a>
                    {% endif %}
                </li>
            {% endfor %}
            <li class="page-item {% if page == nbPages %}disabled{% endif %}">
                <a class="page-link" href="{{ path(current_path, {'page': page + 1}) }}"><i class="fas fa-angle-right"></i></a>
            </li>
            <li class="page-item {% if page == nbPages %}disabled{% endif %}">
                <a class="page-link" href="{{ path(current_path, {'page': nbPages}) }}" tabindex="-1"><i class="fas fa-angle-double-right"></i></a>
            </li>
        </ul>
    </nav>
{% endif %}